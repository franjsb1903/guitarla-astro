---
import Layout from '../../layouts/Layout.astro'
import type { Post } from '../../models/Post'
import { formatDate } from '../../helpers'

export async function getStaticPaths() {
  const url = `${import.meta.env.PUBLIC_API_URL}/posts?populate=image`
  const response = await fetch(url)
  const { data } = await response.json()
  return data.map(post => ({
    params: {
      id: post.attributes.url,
    },
    props: {
      post: post.attributes,
    },
  }))
}

export interface Props {
  post: Post
}

const { title, publishedAt, content, image } = Astro.props.post
---

<Layout
  title={title}
  description="Página de tienda de instrumentos musicales, guitarras, cursos, blog y más"
>
  <article class="post mt-3">
    <img src={image.data.attributes.url} alt={`Blog ${title}`} />

    <div class="contenido">
      <h3>{title}</h3>
      <p class="fecha">{formatDate(publishedAt)}</p>
      <p class="texto">{content}</p>
    </div>
  </article>
</Layout>

<style>
  .post {
    max-width: 80rem;
    margin: 0 auto;
  }
  .contenido {
    padding: 1.5rem;
  }
  .contenido h3 {
    font-weight: 900;
    font-size: 2.8rem;
    margin: 0;
  }
  .fecha {
    font-size: 1.6rem;
    color: var(--primary);
  }
  .texto {
    white-space: pre-wrap;
  }
  .mt-3 {
    margin-top: 3rem;
  }
</style>
